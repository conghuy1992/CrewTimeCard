<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:attr/colorControlHighlight">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:angle="90"
                        android:endColor="@color/app_base_color"
                        android:startColor="@color/app_base_color"
                        android:type="linear" />
                    <corners android:radius="4dp" />
                    <padding
                        android:bottom="3dp"
                        android:left="3dp"
                        android:right="3dp"
                        android:top="3dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>