<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="timecard.dazone.com.dazonetimecard.activities.IntroActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/main_vpg_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/intro_bottom_bar_height"
        android:layout_alignParentBottom="true"
        android:padding="3dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/drawer_devide_color" />

        <LinearLayout
            android:id="@+id/dot_lnl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            style="@style/button"
            android:id="@+id/skip_intro"
            android:layout_width="@dimen/intro_bottom_bar_height"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="@string/string_skip"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_label" />

    </RelativeLayout>

</RelativeLayout>