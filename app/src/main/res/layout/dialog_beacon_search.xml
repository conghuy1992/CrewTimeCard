<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
                android:orientation="vertical"
              android:padding="@dimen/padding_block">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:background="@null"
        android:fontFamily="sans-serif-light"
        android:gravity="top"
        android:linksClickable="true"
        android:padding="@dimen/padding_normal"
        android:text="@string/beacon_please_wait"
        android:textColor="@android:color/black"
        android:textColorHint="@color/disable_text_color"
        android:textColorLink="@color/app_base_color"
        android:textSize="@dimen/dialog_message_text_size"/>


    <LinearLayout
        android:id="@+id/add_ln_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="@dimen/padding_block"
            android:text="@string/beacon_button_use_gps"
            android:textColor="@color/app_base_color"
            android:textSize="@dimen/dialog_button_text_size"/>

    </LinearLayout>
</LinearLayout>