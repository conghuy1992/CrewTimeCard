<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_date_datePicker"
    android:layout_width="@dimen/date_picker_month_year_width"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!-- LAYOUT YEAR -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/date_picker_month_year_layout_year_height">

        <ImageView
            android:id="@+id/btn_previous_year"
            android:layout_width="@dimen/date_picker_month_year_button_size"
            android:layout_height="@dimen/date_picker_month_year_button_size"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_year"
            android:background="@drawable/bg_circle_blue"
            android:scaleType="center"
            android:src="@drawable/ic_keyboard_arrow_left_white_18dp" />

        <TextSwitcher
            android:id="@+id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/padding_normal"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/btn_next_year"
            android:layout_width="@dimen/date_picker_month_year_button_size"
            android:layout_height="@dimen/date_picker_month_year_button_size"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_year"
            android:background="@drawable/bg_circle_blue"
            android:scaleType="center"
            android:src="@drawable/ic_keyboard_arrow_right_white_18dp" />
    </RelativeLayout>

    <!-- DIVIDER -->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider_color" />

    <!-- LAYOUT MONTH -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_block">
        <!-- ROW 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- 1 -->
            <LinearLayout
                android:id="@+id/btn_month_1"
                style="@style/dialog_month_year_layout_month">

                <!-- NUMBER -->
                <TextView
                    style="@style/dialog_month_year_tv_month_number"
                    android:text="1" />
                <!-- TEXT -->
                <TextView
                    style="@style/dialog_month_year_tv_month_text"
                    android:text="JAN" />
            </LinearLayout>
            <!-- 1 -->
            <LinearLayout
                android:id="@+id/btn_month_2"
                style="@style/dialog_month_year_layout_month">

                <!-- NUMBER -->
                <TextView
                    style="@style/dialog_month_year_tv_month_number"
                    android:text="2" />
                <!-- TEXT -->
                <TextView
                    style="@style/dialog_month_year_tv_month_text"
                    android:text="FEB" />
            </LinearLayout>
            <!-- 1 -->
            <LinearLayout
                android:id="@+id/btn_month_3"
                style="@style/dialog_month_year_layout_month">

                <!-- NUMBER -->
                <TextView
                    style="@style/dialog_month_year_tv_month_number"
                    android:text="3" />
                <!-- TEXT -->
                <TextView
                    style="@style/dialog_month_year_tv_month_text"
                    android:text="MAR" />
            </LinearLayout>
            <!-- 1 -->
            <LinearLayout
                android:id="@+id/btn_month_4"
                style="@style/dialog_month_year_layout_month">

                <!-- NUMBER -->
                <TextView
                    style="@style/dialog_month_year_tv_month_number"
                    android:text="4" />
                <!-- TEXT -->
                <TextView
                    style="@style/dialog_month_year_tv_month_text"
                    android:text="APR" />
            </LinearLayout>

        </LinearLayout>
        <!-- ROW 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:orientation="horizontal">
            <!-- 1 -->
            <LinearLayout
                android:id="@+id/btn_month_5"
                style="@style/dialog_month_year_layout_month">

                <!-- NUMBER -->
                <TextView
                    style="@style/dialog_month_year_tv_month_number"
                    android:text="5" />
                <!-- TEXT -->
                <TextView
                    style="@style/dialog_month_year_tv_month_text"
                    android:text="MAY" />
            </LinearLayout>
            <!-- 1 -->
            <LinearLayout
                android:id="@+id/btn_month_6"
                style="@style/dialog_month_year_layout_month">

                <!-- NUMBER -->
                <TextView
                    style="@style/dialog_month_year_tv_month_number"
                    android:text="6" />
                <!-- TEXT -->
                <TextView
                    style="@style/dialog_month_year_tv_month_text"
                    android:text="JUN" />
            </LinearLayout>
            <!-- 1 -->
            <LinearLayout
                android:id="@+id/btn_month_7"
                style="@style/dialog_month_year_layout_month">

                <!-- NUMBER -->
                <TextView
                    style="@style/dialog_month_year_tv_month_number"
                    android:text="7" />
                <!-- TEXT -->
                <TextView
                    style="@style/dialog_month_year_tv_month_text"
                    android:text="JUL" />
            </LinearLayout>
            <!-- 1 -->
            <LinearLayout
                android:id="@+id/btn_month_8"
                style="@style/dialog_month_year_layout_month">

                <!-- NUMBER -->
                <TextView
                    style="@style/dialog_month_year_tv_month_number"
                    android:text="8" />
                <!-- TEXT -->
                <TextView
                    style="@style/dialog_month_year_tv_month_text"
                    android:text="AUG" />
            </LinearLayout>

        </LinearLayout>
        <!-- ROW 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:orientation="horizontal">
            <!-- 1 -->
            <LinearLayout
                android:id="@+id/btn_month_9"
                style="@style/dialog_month_year_layout_month">

                <!-- NUMBER -->
                <TextView
                    style="@style/dialog_month_year_tv_month_number"
                    android:text="9" />
                <!-- TEXT -->
                <TextView
                    style="@style/dialog_month_year_tv_month_text"
                    android:text="SEP" />
            </LinearLayout>
            <!-- 1 -->
            <LinearLayout
                android:id="@+id/btn_month_10"
                style="@style/dialog_month_year_layout_month">

                <!-- NUMBER -->
                <TextView
                    style="@style/dialog_month_year_tv_month_number"
                    android:text="10" />
                <!-- TEXT -->
                <TextView
                    style="@style/dialog_month_year_tv_month_text"
                    android:text="OCT" />
            </LinearLayout>
            <!-- 1 -->
            <LinearLayout
                android:id="@+id/btn_month_11"
                style="@style/dialog_month_year_layout_month">

                <!-- NUMBER -->
                <TextView
                    style="@style/dialog_month_year_tv_month_number"
                    android:text="11" />
                <!-- TEXT -->
                <TextView
                    style="@style/dialog_month_year_tv_month_text"
                    android:text="NOV" />
            </LinearLayout>
            <!-- 1 -->
            <LinearLayout
                android:id="@+id/btn_month_12"
                style="@style/dialog_month_year_layout_month">

                <!-- NUMBER -->
                <TextView
                    style="@style/dialog_month_year_tv_month_number"
                    android:text="12" />
                <!-- TEXT -->
                <TextView
                    style="@style/dialog_month_year_tv_month_text"
                    android:text="DEC" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>