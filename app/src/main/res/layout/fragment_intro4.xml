<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slider_intro_04_bg"
    tools:context="timecard.dazone.com.dazonetimecard.fragments.IntroFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:src="@drawable/slider_intro_04_h" />
    </RelativeLayout>

    <TextView
        android:padding="@dimen/padding_block"
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/intro_bottom_bar_height"
        android:gravity="center_horizontal"
        android:text="@string/intro4_text1"
        android:textColor="@color/white"
        android:textSize="22sp" />

</RelativeLayout>
